<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="2dp"
         android:gravity="center_vertical"
         android:padding="4dp"
         android:orientation="horizontal"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_marginTop="5dp"
         android:id="@+id/box">

        <ImageView
             android:layout_height="25dp"
             android:layout_width="25dp"
             android:src="@drawable/box"
             android:scaleType="fitCenter"
             android:tint="#FFFFB300" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingRight="8dp"
             android:paddingBottom="3dp"
             android:textSize="12sp"
             android:paddingLeft="8dp"
             android:textColor="?attr/colorOnSurface"
             android:paddingTop="3dp"
             android:text="@string/box_body"
             android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="2dp"
         android:background="@drawable/field_background"
         android:gravity="center_vertical"
         android:padding="4dp"
         android:orientation="horizontal"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:id="@+id/circle">

        <ImageView
             android:layout_height="25dp"
             android:layout_width="25dp"
             android:src="@drawable/circle"
             android:scaleType="fitCenter"
             android:tint="#FFFFB300"
             android:focusable="false" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingRight="8dp"
             android:paddingBottom="3dp"
             android:textSize="12sp"
             android:paddingLeft="8dp"
             android:textColor="?attr/colorOnSurface"
             android:paddingTop="3dp"
             android:text="@string/circle_body"
             android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="2dp"
         android:gravity="center_vertical"
         android:padding="4dp"
         android:orientation="horizontal"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:id="@+id/text">

        <ImageView
             android:layout_height="25dp"
             android:layout_width="25dp"
             android:src="@drawable/txt_icon"
             android:scaleType="fitCenter"
             android:tint="#FFFFB300" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingRight="8dp"
             android:textSize="12sp"
             android:paddingLeft="8dp"
             android:textColor="?attr/colorOnSurface"
             android:paddingTop="3dp"
             android:text="@string/text_item"
             android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="2dp"
         android:gravity="center_vertical"
         android:padding="4dp"
         android:orientation="horizontal"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:id="@+id/joystick">

        <ImageView
             android:layout_height="25dp"
             android:layout_width="25dp"
             android:src="@drawable/joystick"
             android:scaleType="fitCenter"
             android:tint="#FFFFB300" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingRight="8dp"
             android:textSize="12sp"
             android:paddingLeft="8dp"
             android:textColor="?attr/colorOnSurface"
             android:paddingTop="3dp"
             android:text="@string/joystick_item"
             android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="5dp"
         android:gravity="center_vertical"
         android:padding="4dp"
         android:orientation="horizontal"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:id="@+id/progress">

        <ImageView
             android:layout_height="25dp"
             android:layout_width="25dp"
             android:src="@drawable/progress"
             android:scaleType="fitCenter"
             android:tint="#FFFFB300" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingRight="8dp"
             android:paddingBottom="3dp"
             android:textSize="12sp"
             android:paddingLeft="8dp"
             android:textColor="?attr/colorOnSurface"
             android:paddingTop="3dp"
             android:text="@string/progress_item"
             android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>